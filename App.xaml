                            Points="0,0 25,25 50,0" />
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Arrow" Property="Fill" Value="#070D23" />
                            </Trigger>
